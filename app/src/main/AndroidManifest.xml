<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ðŸ”¹ Permisos requeridos -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- ðŸ”¹ Hardware opcional de ubicaciÃ³n -->
    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.location.network"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PRO401Semana4">

        <!-- ðŸ”¹ Clave de Google Maps (usada en MapActivity y MainActivity) -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <!-- ðŸ”¹ Pantalla de inicio (login) -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ðŸ”¹ MenÃº principal post-login -->
        <activity
            android:name=".MenuActivity"
            android:exported="true" />

        <!-- ðŸ”¹ Pantalla principal (conversor / despacho / distancia / temperatura) -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <!-- ðŸ”¹ ConfiguraciÃ³n de rangos de temperatura (Room) -->
        <activity
            android:name=".SettingsActivity"
            android:exported="false" />

        <!-- ðŸ”¹ NUEVA: Pantalla exclusiva del mapa (Semana 9) -->
        <activity
            android:name=".MapActivity"
            android:exported="true" />

    </application>

</manifest>